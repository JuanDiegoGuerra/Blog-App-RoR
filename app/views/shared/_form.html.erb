<%= form_with model: post, url: user_posts_path(user.id), method: :post, local: true, scope: post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :text %><br>
    <%= f.text_field :text %>
  </div>
  <%= f.submit "Create post" %>
<% end %>